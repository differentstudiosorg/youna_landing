    script.
      var clickCount = 0;
      var video = document.getElementsByTagName('video')[0];
      var volumeControl = document.getElementsByClassName('volume-control')[0];
      var ctaContainer = document.getElementsByClassName('cta-container')[0];
      video.volume = 0; // Mute video on load
      video.addEventListener('ended', function(event) {
      ctaContainer.className = 'cta-container cta--on';
      });
      if (volumeControl) {
      volumeControl.addEventListener('click', function(event) {
      if (video.volume === 1) {
      video.volume = 0;
      } else {
      video.volume = 1;
      }
      });
      video.addEventListener('volumechange', function(event) {
      if (event.target.volume === 0) {
      volumeControl.className = 'volume-control volume-control--off';
      } else {
      volumeControl.className = 'volume-control volume-control--on';
      }
      });
      }
      if ("false" === 'true') {
      video.volume = 1;
      } else {
      video.addEventListener('click', function(event) {
      // On first click, unmute the video.
      if (clickCount === 0) {
      video.volume = 1;
      clickCount++;
      } else {
      // On subsequent clicks, toggle play
      if (video.paused) {
      video.play();
      } else {
      video.pause();
      }
      }
      });
